<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Space Finder - KPl"
        Width="239.815" ResizeMode="CanResizeWithGrip" SizeToContent="Height" Height="164.668" Background="#FFDEFFF9" BorderBrush="#FF138293" Foreground="{x:Null}" Visibility="Visible" BorderThickness="15,4,4,4" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" Cursor="Arrow">
    <StackPanel Margin="10,10,0,6">

        <Label x:Name="label" Content="Space Number:" HorizontalAlignment="Left" Height="36" Width="153" FontWeight="Bold" FontSize="16"/>

        <TextBox x:Name="space_nr" DockPanel.Dock="Top" Margin="0,0,10,10" Text="R.+xx.xxx" FontSize="20" Height="31" TextAlignment="Center" FontWeight="Bold"/>
        <Button x:Name="button" Content="Find" Click="funkcja" Height="32" Margin="0,0,10,0" FontSize="20"/>

    </StackPanel>

</Window>